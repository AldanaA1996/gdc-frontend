---
import type { GetStaticPaths } from "astro";
import "src/styles/global.css"
//component imports
import App from "../../app/App"
import Layout from "../../components/Layout/Layout.astro";
import LayoutPage from "../../components/Layout/LayoutPage.astro";
import { Toaster } from "@/app/components/ui/sonner";

const title = "Stockly"

export function getStaticPaths() {
    const departments = [
        {id: "1" }, 
        {id: "2" },
        {id: "3" }, 
        {id: "4" }, 
        {id: "5" }, 
        {id: "6" },
        {id: "7" }, 
        {id: "8" }, 


    ];
    return [ { params: { route: undefined } },
    { params: { route: "login" } },
    { params: { route: "signup" } },
    { params: { route: "paniol" } },

    { params: { route: "info" }},
    { params: { route: "inventario" } },
    { params: { route: "addTool"} },
    { params: { route: "movements" } },
    { params: { route: "search" } },
    { params: { route: "departments" } },
    ...departments.map((d) => ({
      params: { route: `departments/${d.id}` },
    })),
];
}
---

<script></script>
<Layout title={title} >
    <LayoutPage>
        <App client:only="react" />
    </LayoutPage>
    <Toaster richColors position="top-right" client:load />
</Layout>