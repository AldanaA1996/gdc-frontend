---
import { Layout } from "@/components";
import LayoutPage from "../components/Layout/LayoutPage.astro";
import "../styles/global.css"
---
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>
<Layout title="GDC Stock">
	<LayoutPage>
		<div class="flex flex-col items-center justify-center h-screen">
			<img src="/public/images/logo.svg" alt="GDC Stock Logo" class="w-40 h-35" />
			<h1 class="text-4xl font-bold mb-4">Welcome to GDC Stock</h1>
			<p class="text-lg">Your one-stop solution for stock management.</p>
			<a href="/app" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Get Started</a>
		</div>
		<div class="flex flex-col items-center justify-center h-screen">
			<h2 class="text-2xl font-bold mb-4">Features</h2>
			<ul class="list-disc list-inside">
				<li>Real-time stock updates</li>
				<li>Easy-to-use interface</li>
				<li>Comprehensive reporting</li>
			</ul>
			<a href="/features" class="mt-4 px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">Learn More</a>
		</div>
		<div class="flex flex-col items-center justify-center h-screen">
			<h2 class="text-2xl font-bold mb-4">Contact Us</h2>
			<p class="text-lg">Have questions? Reach out to us!</p>
			<a href="/contact" class="mt-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Get in Touch</a>
		</div>
	</LayoutPage>
	
</Layout>
